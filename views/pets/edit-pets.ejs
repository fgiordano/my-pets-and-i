<div class="container">
      <div class="row">
        <div class="col-sm-6 centered-form">
          <form action="/pets/<%= Pet._id %>/edit-pets/" method="post">

            <% if (typeof(errors) !== 'undefined'){ %>
              <div class="alert alert-danger">
              <ul>
                <% for (let error in errors){ %>
                  <li><%= errors[error].message %></li>
                <% } %>
              </ul>
              </div>
            <% } %>


            <div class="form-group">
              <label for="name">Pet's Name</label>
              <input type="text" name="name" class="form-control" value="<%= Pet.name %>">
            </div>
            <div class="form-group">
              <label for="age">Age</label>
              <input type="text" name="age" class="form-control" value="<%= Pet.age %>">
            </div>
            <div class="form-group">
              <label for="weight">Weight</label>
              <input type="text" name="weight" class="form-control" value="<%= Pet.weight %>">
            </div>
            <div class="form-group">
              <label for="breed">Breed</label>
              <input type="text" name="breed" class="form-control" value="<%= Pet.breed %>">
            </div>
            <div class="form-group">
              <label for="aboutme">About this pet</label>
              <textarea
                id="description"
                name="aboutme"
                class="form-control">
                <%= Pet.aboutme %>
              </textarea>
            </div>


            <div class="form-group">
              <button type="submit">Edit your pet</button>
            </div>
          </form>
        </div>
      </div>
    </div>
